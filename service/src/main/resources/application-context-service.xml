<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <import resource="classpath:/application-context-dao.xml"/>

    <context:annotation-config/>
    <context:component-scan base-package="com.becomejavasenior.service.impl"/>

    <bean id="userServiceStaticFactory" class="com.becomejavasenior.service.factory.UserServiceStaticFactoryBeanInst"
          factory-method="createInstance"
    />

    <bean id="dealServiceStaticFactory" class="com.becomejavasenior.service.factory.DealServiceStaticFactoryBeanInst"
          factory-method="createInstance"
    />

    <bean id="companyServiceFactory" class="com.becomejavasenior.service.factory.CompanyServiceFactoryBeanInst"
    />

    <bean id="contactServiceFactory" class="com.becomejavasenior.service.factory.ContactServiceFactoryBeanInst"
    />

    <bean id="companyServiceLocator"
          factory-bean="companyServiceFactory"
          factory-method="createInstance"
          lazy-init="true"
    />

    <bean id="contactServiceLocator"
          factory-bean="companyServiceFactory"
          factory-method="createInstance"
          lazy-init="true"
    />

</beans>